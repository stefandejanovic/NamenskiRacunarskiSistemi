/*	Konfiguracija sistema:Pinovi 8-13, izlazni pinovi, na njih su postavljene lampicePin A0, ulazni pin, na njega je postavljen analogni klizac (Slider)*/int count = 0, i;void slider(){	count = analogRead(A0);	count = map(count, 0, 1023, 0, 6);	for(i=0; i<6; i++) {		if (i<count)			digitalWrite(i+8, HIGH);		else			digitalWrite(i+8, LOW);	}}void setup(){	count=0;	for(i=8; i<=13; i++) {		pinMode(i, OUTPUT);		digitalWrite(i, LOW);		}}void loop(){	slider();	delay(100);}