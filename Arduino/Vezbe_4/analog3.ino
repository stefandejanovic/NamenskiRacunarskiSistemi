/*	Konfiguracija sistema:Pin 2: izlazni pin, lampicaPin A0: Ulazni pin, Analogni klizac (slider)*/int count = 0, i, PWMWidth = 6;int oldTime=0, newTime = 0;void slider(){	count = analogRead(A0);	count = PWMWidth*count;	newTime = millis();	if (newTime-oldTime<count)		digitalWrite(2, HIGH);	else		digitalWrite(2, LOW);		if (newTime-oldTime>1000*PWMWidth)		oldTime = newTime;}void setup(){	pinMode(2, OUTPUT);	digitalWrite(2, LOW);		oldTime = millis();}void loop(){	slider();	delay(PWMWidth);}