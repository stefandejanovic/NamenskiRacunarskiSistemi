/*			Konfiguuracija sistema:Pin 2: ulazni pin, prekidacPinovi 5 i 6: izlazni pinovi, DC motor*/int speed = 100;void prekidacOff();void prekidacOn() {	analogWrite(06, speed);	detachInterrupt(0);	attachInterrupt(0, prekidacOff, FALLING);}void prekidacOff() {	analogWrite(06, 0);	detachInterrupt(0);	attachInterrupt(0, prekidacOn, RISING);}void setup(){	if (digitalRead(2)==1) {		analogWrite(06, speed);		attachInterrupt(0, prekidacOff, FALLING);	} else {		analogWrite(06, 0);		attachInterrupt(0, prekidacOn, RISING);	}	}void loop(){	delay(100);}